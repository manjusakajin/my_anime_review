<% provide :title, @anime.name %>
<div class = "row">
  <div class = "col-md-12">
    <h3>
      <% if @anime.image_file_name %>
        <%= link_to image_tag(@anime.image.url(:large)), @anime %>
      <% else %>
        <%= gravatar_for @anime, size: 50  %>
      <% end %>
      <%= @anime.name %>
    </h3>
    <p><%= t "anime.introduce" %><%= @anime.introdution %></p>
    <p><%= t "anime.web_ratting" %><%= @anime.web_ratting %></p>
    <% if @anime.anime_genres.any? %>
      <% @anime.anime_genres.each do |anime_genre| %>
          <span>
            <%= link_to anime_genre.genre.name, anime_genre.genre %>
          </span>
      <% end %>
    <% end %>
    <% if current_user.is_admin? %>
      <p><%= link_to t("anime.update"), edit_admin_anime_path %></p>
    <% end %>
    <p><b><%= t "rate.rate_this" %></b></p>
    <%= t "rate.story" %><%= rating_for @anime, "story", star: 10,
      cancel: true, disable_after_rate: false %>
    <%= t "rate.art" %><%= rating_for @anime, "art", star: 10, cancel: true,
      disable_after_rate: false %>
    <%= t "rate.sound" %><%= rating_for @anime, "sound", star: 10,
      cancel: true, disable_after_rate: false %>
    <%= t "rate.character" %>
    <%= rating_for @anime, "character", star: 10, cancel: true,
      disable_after_rate: false %>
    <%= t "rate.enjoyment" %>
    <%= rating_for @anime, "enjoyment", star: 10, cancel: true,
      disable_after_rate: false %>
    <p><%= t "anime.overall" %><%= @anime.overall_ratings %></p>
    <% unless current_user.reviewed? @anime %>
      <div>
        <%= link_to t("review.create"), new_anime_review_path(@anime) %>
      </div>
    <% end %>
  </div>
</div>
<div class = "row">
  <div class="col-md-12">
    <% if @reviews.any? %>
      <h3><%= t "review.title" %> (<%= @reviews.count %>)</h3>
      <ol class="reviews">
        <%= render @reviews %>
      </ol>
      <p><%= will_paginate @reviews %></p>
    <% end %>
  </div>
</div>
